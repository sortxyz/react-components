{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/components/styles/*"],
      "@globalStyles/*": ["src/components/styles/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "src/__mocks__/**/*", "src/**/*.test.ts"]
}
